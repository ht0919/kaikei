<p id="notice"><%= notice %></p>

<h1>経費一覧</h1>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>科目</th>
      <th>適用</th>
      <th>金額</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @keihis.each do |keihi| %>
      <tr>
        <td><%= keihi.date %></td>
        <td><%= keihi.kamoku.name %></td>
        <td><%= keihi.tekiyou %></td>
        <td><%= keihi.kingaku %></td>
        <td><%= link_to '詳細', keihi %></td>
        <td><%= link_to '編集', edit_keihi_path(keihi) %></td>
        <td><%= link_to '戻る', keihi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

